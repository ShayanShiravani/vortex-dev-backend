    "target": "es2016",
    "module": "commonjs",
    "allowJs": true,
    "outDir": "./build",
    "rootDir": "src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  }
}
